# Supabase 설정
# Supabase 대시보드에서 프로젝트 설정 > API 섹션에서 확인할 수 있습니다
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# 데이터베이스 URL (Supabase 대시보드 > 프로젝트 설정 > 데이터베이스에서 확인)
DATABASE_URL=postgres://postgres:postgres@db.your-project-ref.supabase.co:5432/postgres

# Clerk 설정
# Clerk 대시보드에서 API Keys 섹션에서 확인할 수 있습니다
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your-publishable-key
CLERK_SECRET_KEY=sk_test_your-secret-key

# Clerk 웹훅 설정
# Clerk 대시보드 > Webhooks에서 웹훅 설정 및 시크릿 생성 후 확인
CLERK_WEBHOOK_SECRET=whsec_your-webhook-secret

# Clerk 리디렉션 URL 설정
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/signin
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/signup
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Next.js 환경 설정
NODE_ENV=development # production | development | test 