#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "🔍 Running pre-commit checks..."

# Run lint-staged for code quality
echo "📝 Checking code style and formatting..."
npx lint-staged

# Run TypeScript type checking
echo "🔧 Running TypeScript type check..."
npm run type-check

# Run tests on staged files (optional - can be commented out if tests take too long)
echo "🧪 Running tests..."
npm run test

echo "✅ Pre-commit checks passed!"
